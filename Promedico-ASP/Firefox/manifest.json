{
  "manifest_version": 2,
  "name": "Promedico ASP Helper",
  "version": "1.2",
  "description": "Automation scripts for Promedico ASP",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "promedico-helper@degrotedokter",
      "strict_min_version": "109.0"
    }
  },
  
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  
  "permissions": [
    "storage",
    "https://www.promedico-asp.nl/*",
    "https://www.zorgdomein.nl/*",
    "https://api.github.com/*",
    "https://raw.githubusercontent.com/*",
    "clipboardWrite"
  ],
  
  "background": {
    "scripts": ["config.js", "background.js"]
  },
  
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Promedico ASP Helper",
    "default_popup": "popup.html"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.promedico-asp.nl/promedico/*",
        "https://www.zorgdomein.nl/*"
      ],
      "js": [
        "scripts/zorgdomein-quick-menu.js",
        "scripts/contactsoort-quick-buttons.js",
        "scripts/p-veld-herinneringen.js",
        "scripts/kopieer-buttons.js",
        "scripts/ketenzorg-highlights.js",
        "scripts/econsult-templates.js",
        "scripts/lsp-instellingen.js",
        "scripts/correspondentie-upload.js",
        "scripts/auto-download-uitschrijfdossier.js",
        "scripts/auto-delete-berichten.js",
        "scripts/agenda-menu-items.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "https://www.promedico-asp.nl/promedico/*"
      ],
      "js": ["loader.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  
  "web_accessible_resources": [
    "scripts/*.js",
    "config.js"
  ]
}
