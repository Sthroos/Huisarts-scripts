{
  "manifest_version": 2,
  "name": "Promedico ASP Helper",
  "version": "1.3.664",
  "description": "Automation scripts for Promedico ASP",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "promedico-helper@degrotedokter",
      "strict_min_version": "109.0",
      "update_url": "https://raw.githubusercontent.com/Sthroos/Huisarts-scripts/main/Promedico-ASP/Firefox/updates.json"
    }
  },
  
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  
  "permissions": [
    "storage",
    "https://www.promedico-asp.nl/*",
    "https://www.zorgdomein.nl/*",
    "https://api.github.com/*",
    "https://raw.githubusercontent.com/*",
    "clipboardWrite",
    "tabs",
    "management"
  ],
  
  "background": {
    "scripts": ["config.js", "background.js"]
  },
  
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Promedico ASP Helper",
    "default_popup": "popup.html"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.promedico-asp.nl/promedico/*",
        "https://www.zorgdomein.nl/*",
        "https://www.zneller.nl/*"
      ],
      "js": [
        "config.js",
        "content.js" 
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  
  "web_accessible_resources": [
    "scripts/*.js",
    "config.js"
  ]
}